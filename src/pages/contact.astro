---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import { SOCIAL_LINKS } from "src/config";
---

<BaseLayout title="Contact" urlMenuItem="/contact">
  <div class="grid grid-cols-1 gap-5 md:grid-cols-2 lg:grid-cols-4 md:gap-x-28 mt-4">
    {
      SOCIAL_LINKS.map((link) => (
        <a
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          class="text-2xl hover:text-primary flex flex-col gap-2 items-center transition-colors duration-300 ease-in-out"
          aria-label={link.title}
          title={link.title}
        >
          <Icon name={link.icon} class="w-44 h-44" />
          <span class="text-center">
            {link.title}
            </span>
        </a>
      ))
    }
  </div>
</BaseLayout>
